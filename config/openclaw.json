{
  "models": {
    "providers": {
      "myprovider": {
        "baseUrl": "${MYPROVIDER_BASE_URL}",
        "apiKey": "${MYPROVIDER_API_KEY}",
        "api": "openai-completions",
        "models": [
          { "id": "claude-opus-4-6", "name": "claude-opus-4-6" }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
       "model": {
         "primary": "myprovider/claude-opus-4-6"
       },
      "sandbox": {
        "mode": "off"
      }
    }
  },
  "tools": {
    "web": {
      "search": { "enabled": true },
      "fetch": { "enabled": true }
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "dmPolicy": "pairing",
      "groups": {
        "*": {
          "groupPolicy": "open",
          "requireMention": false
        }
      }
    },
    "zalo": {
      "enabled": true,
      "botToken": "${ZALO_BOT_TOKEN}",
      "dmPolicy": "pairing"
    },
    "slack": {
      "enabled": true,
      "appToken": "${SLACK_APP_TOKEN}",
      "botToken": "${SLACK_BOT_TOKEN}",
      "mode": "socket"
    }
  },
  "gateway": {
     "port": 3000,
     "mode": "local"
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      },
      "zalo": {
        "enabled": true
      }
    }
  }
}
